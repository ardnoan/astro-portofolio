---
import MainLayout from "../layouts/MainLayout.astro";
import Hero from "../components/Hero.astro";
import ProjectsSection from "../components/ProjectSection.astro";
import projects from "../data/projects.json";

// Get featured projects
const featuredProjects = projects.filter((project) => project.featured);
---


<MainLayout title="Portfolio - Featured Projects">
  <Hero />
  <!-- Featured Projects Section -->
  <section id="projects" class="projects-section">
    <div class="section-header">
      <h2>Featured Projects</h2>
      <a href="/projects" class="view-all">View All Projects</a>
    </div>
    <ProjectsSection projects={featuredProjects} />
  </section>
</MainLayout>

<style>
  /* Global Styles */
  :root {
    --primary-glow: rgba(33, 245, 255, 0.8);
    --secondary-glow: rgba(255, 0, 255, 0.6);
    --text-glow: 0 0 10px rgba(33, 245, 255, 0.8);
    --grid-color: rgba(33, 245, 255, 0.2);
    --bg-dark: #050a18;
    --text-color: #ffffff;
    --accent-color: #21f5ff;
    --accent-color-secondary: #ff00ff;
  }

  /* Hero Container */
  .hero-container {
    position: relative;
    height: 90vh;
    width: 100%;
    overflow: hidden;
    background: linear-gradient(135deg, #070b19 0%, #0c1424 100%);
    display: flex;
    justify-content: center;
    align-items: center;
  }

  /* Cyber Grid Background */
  .cyber-grid {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: linear-gradient(
        to right,
        var(--grid-color) 1px,
        transparent 1px
      ),
      linear-gradient(to bottom, var(--grid-color) 1px, transparent 1px);
    background-size: 50px 50px;
    transform: perspective(500px) rotateX(60deg);
    transform-origin: center top;
    animation: grid-animation 20s linear infinite;
  }

  @keyframes grid-animation {
    0% {
      background-position: 0 0;
    }
    100% {
      background-position: 0 1000px;
    }
  }

  /* Hero Content */
  .hero-content {
    position: relative;
    z-index: 10;
    text-align: center;
    max-width: 800px;
    padding: 2rem;
  }

  /* Glitch Text Effect */
  .glitch-text {
    position: relative;
    font-family: "Orbitron", sans-serif;
    display: flex;
    flex-direction: column;
    align-items: center;
    color: var(--text-color);
    text-shadow: var(--text-glow);
    margin-bottom: 1rem;
  }

  .glitch-text-main {
    font-size: 5rem;
    font-weight: 900;
    letter-spacing: 1rem;
    animation: cyber-glow 2s ease-in-out infinite alternate;
  }

  .glitch-text-sub {
    font-size: 2.5rem;
    letter-spacing: 0.5rem;
    margin-top: -0.5rem;
    color: var(--accent-color);
  }

  .glitch-text-main::before,
  .glitch-text-main::after {
    content: "CYBER";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0.8;
  }

  .glitch-text-main::before {
    color: var(--accent-color);
    animation: glitch 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94) both infinite;
    animation-delay: 0.5s;
  }

  .glitch-text-main::after {
    color: var(--accent-color-secondary);
    animation: glitch 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94) reverse both
      infinite;
    animation-delay: 0.7s;
  }

  @keyframes glitch {
    0% {
      transform: translate(0);
    }
    20% {
      transform: translate(-3px, 3px);
    }
    40% {
      transform: translate(-3px, -3px);
    }
    60% {
      transform: translate(3px, 3px);
    }
    80% {
      transform: translate(3px, -3px);
    }
    100% {
      transform: translate(0);
    }
  }

  @keyframes cyber-glow {
    from {
      text-shadow:
        0 0 5px var(--primary-glow),
        0 0 10px var(--primary-glow),
        0 0 15px var(--primary-glow);
    }
    to {
      text-shadow:
        0 0 10px var(--primary-glow),
        0 0 20px var(--primary-glow),
        0 0 30px var(--primary-glow),
        0 0 40px var(--secondary-glow);
    }
  }

  /* Hero Subtitle */
  .hero-subtitle {
    font-size: 1.2rem;
    color: var(--text-color);
    margin-bottom: 2rem;
    letter-spacing: 3px;
    opacity: 0.8;
  }

  /* CTA Button */
  .cta-container {
    margin-top: 2rem;
  }

  .cyber-button {
    position: relative;
    display: inline-block;
    padding: 0.75rem 2.5rem;
    background: linear-gradient(
      90deg,
      transparent,
      var(--accent-color),
      transparent
    );
    color: var(--text-color);
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 2px;
    font-weight: bold;
    border: 1px solid var(--accent-color);
    box-shadow:
      0 0 5px var(--accent-color),
      inset 0 0 5px var(--accent-color);
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .cyber-button:hover {
    background: var(--accent-color);
    color: var(--bg-dark);
    box-shadow:
      0 0 15px var(--accent-color),
      inset 0 0 15px var(--accent-color);
  }

  .cyber-button-glitch {
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.4),
      transparent
    );
    transition: all 0.6s;
  }

  .cyber-button:hover .cyber-button-glitch {
    left: 100%;
  }

  /* Projects Section */
  .projects-section {
    padding: 4rem 2rem;
    background-color: var(--bg-dark);
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--accent-color);
  }

  .section-header h2 {
    color: var(--text-color);
    font-size: 2rem;
    text-shadow: 0 0 5px var(--accent-color);
    margin: 0;
  }

  .view-all {
    color: var(--accent-color);
    text-decoration: none;
    font-weight: bold;
    position: relative;
    padding: 0.5rem 1rem;
    border: 1px solid var(--accent-color);
    transition: all 0.3s ease;
  }

  .view-all:hover {
    background-color: var(--accent-color);
    color: var(--bg-dark);
    box-shadow: 0 0 10px var(--accent-color);
  }

  /* Responsive Adjustments */
  @media (max-width: 768px) {
    .glitch-text-main {
      font-size: 3.5rem;
      letter-spacing: 0.6rem;
    }

    .glitch-text-sub {
      font-size: 1.8rem;
      letter-spacing: 0.3rem;
    }

    .section-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }
  }

  @media (max-width: 480px) {
    .glitch-text-main {
      font-size: 2.5rem;
      letter-spacing: 0.4rem;
    }

    .glitch-text-sub {
      font-size: 1.4rem;
      letter-spacing: 0.2rem;
    }
  }
</style>
