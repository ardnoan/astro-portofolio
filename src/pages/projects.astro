---
import MainLayout from "../layouts/Layout.astro";
import ProjectsSection from "../components/ProjectSection.astro";
import projects from "../data/projects.json";
---

<MainLayout
  title="Projects"
  description="Check out Ardian's web development projects"
>
  <section class="section projects-section">
    <div class="container">
      <h1 class="section-title" data-text="My Projects">My Projects</h1>

      <div class="projects-intro">
        <p class="cyber-text">
          Here's a collection of my recent work. Each project represents
          different skills and technologies I've worked with. Feel free to
          explore the code and live demos.
        </p>
      </div>

      <ProjectsSection projects={projects} />
    </div>
  </section>
</MainLayout>
<link rel="stylesheet" href="/styles/main.css" />
