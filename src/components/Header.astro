---
const pathname = Astro.url.pathname;
const isActive = (path: string) => {
  if (path === "/" && pathname === "/") return true;
  if (path !== "/" && pathname.startsWith(path)) return true;
  return false;
};
---

<header class="cyber-header">
  <div class="container">
    <div class="logo">
      <a href="/" class="logo-text">Ardnoan</a>
    </div>

    <nav class="nav">
      <button class="menu-toggle" aria-label="Toggle menu">
        <div class="hamburger">
          <span class="line"></span>
          <span class="line"></span>
          <span class="line"></span>
        </div>
      </button>

      <ul class="nav-menu">
        <li><a href="/" class={isActive("/") ? "active" : ""}>Home</a></li>
        <li>
          <a href="/about" class={isActive("/about") ? "active" : ""}>About</a>
        </li>
        <li>
          <a href="/projects" class={isActive("/projects") ? "active" : ""}>Projects</a>
        </li>
        <li>
          <a href="/contact" class={isActive("/contact") ? "active" : ""}>Contact</a>
        </li>
      </ul>
    </nav>
  </div>
</header>

<style>
  /* Google Fonts import */
  @import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@400;500;600;700&family=Share+Tech+Mono&display=swap');

  /* Header Styles */
  .cyber-header {
    /* background-color: rgba(13, 15, 20, 0.95); */
    backdrop-filter: blur(2px);
    -webkit-backdrop-filter: blur(10px);
    box-shadow: 0 4px 20px rgba(13, 15, 20, 0.95);
    position: sticky;
    top: 0;
    z-index: 100;
    border-bottom: 5px solid rgba(46, 232, 232, 0.95);
  }

  .cyber-header .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 2rem;
    height: 70px;
    max-width: 1200px;
    margin: 0 auto;
  }

  /* Logo Styles */
  .logo-text {
    font-family: 'Orbitron', sans-serif;
    font-size: 1.8rem;
    font-weight: 700;
    color: #e2e2e2;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 2px;
    position: relative;
    text-shadow: 0 0 10px rgba(46, 232, 232, 0.5);
    transition: all 0.3s ease;
  }

  .logo-text:hover {
    color: #2fe8e8;
    text-shadow: 0 0 15px rgba(46, 232, 232, 0.8);
  }

  /* Navigation Menu */
  .nav-menu {
    display: flex;
    list-style: none;
    gap: 2.5rem;
    margin: 0;
    padding: 0;
  }

  .nav-menu li {
    position: relative;
  }

  .nav-menu a {
    font-family: 'Share Tech Mono', monospace;
    color: #e2e2e2;
    font-weight: 500;
    text-decoration: none;
    font-size: 1rem;
    letter-spacing: 1px;
    padding: 0.5rem 0;
    transition: all 0.3s ease;
    position: relative;
    text-transform: uppercase;
  }

  .nav-menu a::before {
    content: "";
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, transparent, #05d9e8, transparent);
    box-shadow: 0 0 8px #05d9e8;
    transition: width 0.4s ease;
  }

  .nav-menu a:hover {
    color: #2fe8e8;
    text-shadow: 0 0 5px rgba(46, 232, 232, 0.5);
  }

  .nav-menu a:hover::before, 
  .nav-menu a.active::before {
    width: 100%;
  }

  .nav-menu a.active {
    color: #2fe8e8;
    text-shadow: 0 0 5px rgba(46, 232, 232, 0.5);
  }

  /* Hamburger Menu */
  .menu-toggle {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
    z-index: 10;
  }

  .hamburger {
    width: 30px;
    height: 20px;
    position: relative;
    transition: all 0.3s ease;
  }

  .line {
    display: block;
    width: 100%;
    height: 2px;
    background-color: #2fe8e8;
    position: absolute;
    left: 0;
    border-radius: 2px;
    transition: all 0.3s ease;
    box-shadow: 0 0 5px #05d9e8;
  }

  .line:nth-child(1) {
    top: 0;
  }

  .line:nth-child(2) {
    top: 50%;
    transform: translateY(-50%);
  }

  .line:nth-child(3) {
    bottom: 0;
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    .cyber-header .container {
      padding: 0 1.5rem;
    }

    .menu-toggle {
      display: block;
    }

    .nav-menu {
      position: fixed;
      top: 70px;
      right: -100%;
      width: 100%;
      height: calc(100vh - 70px);
      flex-direction: column;
      background-color: rgba(13, 15, 20, 0.8);
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
      align-items: center;
      justify-content: center;
      text-align: center;
      gap: 2.5rem;
      transition: right 0.4s cubic-bezier(0.4, 0.0, 0.2, 1);
      padding: 2rem 0;
      border-left: 1px solid rgba(46, 232, 232, 0.2);
    }

    .nav-menu.active {
      right: 0;
    }

    .hamburger.active .line:nth-child(1) {
      transform: translateY(9px) rotate(45deg);
    }

    .hamburger.active .line:nth-child(2) {
      opacity: 0;
    }

    .hamburger.active .line:nth-child(3) {
      transform: translateY(-9px) rotate(-45deg);
    }
  }
</style>

<script>
  // Toggle mobile menu
  document.addEventListener("DOMContentLoaded", () => {
    const menuToggle = document.querySelector(".menu-toggle");
    const navMenu = document.querySelector(".nav-menu");
    const hamburger = document.querySelector(".hamburger");
    
    menuToggle?.addEventListener("click", () => {
      navMenu?.classList.toggle("active");
      hamburger?.classList.toggle("active");
    });
    
    // Close menu when clicking on links (for mobile)
    const navLinks = document.querySelectorAll(".nav-menu a");
    navLinks.forEach(link => {
      link.addEventListener("click", () => {
        navMenu?.classList.remove("active");
        hamburger?.classList.remove("active");
      });
    });
  });
</script>