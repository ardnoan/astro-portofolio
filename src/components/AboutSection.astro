---
// Define skills
const skills = [
  { category: "Frontend", items: ["HTML", "CSS", "JavaScript", "React"] },
  { category: "Backend", items: ["Node.js", "Express", "PHP"] },
  { category: "Tools", items: ["Git", "VSCode", "Docker", "Figma"] },
  { category: "Database", items: ["MySQL", "MongoDB"] },
];

// Define education
const education = [
  {
    degree: "Bachelor of Computer Science",
    institution: "University of Technology",
    period: "2018 - 2022",
    description:
      "Studied computer science with a focus on web development and software engineering.",
  },
];

// Define experience
const experience = [
  {
    position: "Frontend Developer",
    company: "Tech Solutions Inc.",
    period: "2022 - Present",
    description:
      "Developing responsive web applications using modern frontend technologies.",
  },
  {
    position: "Web Design Intern",
    company: "Creative Studio",
    period: "2021 - 2022",
    description:
      "Assisted in designing and implementing website interfaces for various clients.",
  },
];
---

<div class="about-content">
  <div class="about-intro">
    <div class="about-image">
      <img src="/image.png" alt="Ardian" loading="lazy" />
    </div>
    <div class="about-text">
      <p>
        Hallo bro, I'm Ardi
      <p>
        Let's build something impactful â€” whether it's code, stories, or ideas
        worth sharing.
      </p>
    </div>
  </div>

  <div class="about-sections">
    <div class="section-skills">
      <h3>Skills</h3>
      <div class="skills-container">
        {
          skills.map((skillGroup, index) => (
            <div class="skill-group">
              <h4>{skillGroup.category}</h4>
              <div class="skill-tags">
                {skillGroup.items.map((skill, idx) => (
                  <span class="skill-tag">{skill}</span>
                ))}
              </div>
            </div>
          ))
        }
      </div>
    </div>

    <div class="section-experience">
      <h3>Experience</h3>
      <div class="timeline">
        {
          experience.map((item, index) => (
            <div class="timeline-item">
              <div class="timeline-dot" />
              <div class="timeline-content">
                <h4>{item.position}</h4>
                <h5>{item.company}</h5>
                <p class="timeline-period">{item.period}</p>
                <p>{item.description}</p>
              </div>
            </div>
          ))
        }
      </div>
    </div>

    <div class="section-education">
      <h3>Education</h3>
      <div class="timeline">
        {
          education.map((item, index) => (
            <div class="timeline-item">
              <div class="timeline-dot" />
              <div class="timeline-content">
                <h4>{item.degree}</h4>
                <h5>{item.institution}</h5>
                <p class="timeline-period">{item.period}</p>
                <p>{item.description}</p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</div>
